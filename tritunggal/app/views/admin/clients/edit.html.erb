<div class="page-header">
  <div class="container">
    <div class="col-xs-12 col-sm-4 name no-padding-lr">Edit Client</div>
    <div class="col-xs-12 col-sm-8 breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to "Admin", admin_path %></li>
        <li><%= link_to "Clients", admin_clients_path %></li>
        <li class="active">Edit Client</li>
      </ol>
    </div>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <%= form_for([:admin, @client], :html => { :multipart => true, :class => "form-horizontal"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= image_tag @client.logo.url(:thumb) %>
      </div>
    </div>
    <%= render :partial => 'form', :locals => { :f => f} %>
    <div class="form-group">
      <div class="col-sm-2">&nbsp;</div>
      <div class="col-sm-10">
        <%= f.submit :class => "btn btn-success" %>
        <%= link_to 'Back', admin_clients_path, :class => "btn btn-info" %>
      </div>
    </div>
  <% end %>
</div>
