<div class="page-header">
  <div class="container">
    <div class="col-xs-12 col-sm-4 name no-padding-lr">Clients</div>
    <div class="col-xs-12 col-sm-8 breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to "Admin", admin_path %></li>
        <li class="active">Clients</li>
      </ol>
    </div>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <p><%= link_to "Add new client", new_admin_client_path %></p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Logo</th>
        <th>Name</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each_with_index do |client, x| %>
        <tr>
          <th><%= @no+x+1 %></th>
          <td class="client-image"><%= image_tag client.try(:logo).try(:url, :thumb) %></td>
          <td><%= client.name %></td>
          <td>
            <%= link_to "Edit", edit_admin_client_path(client.id), :class => "btn btn-success" %>
            <%= link_to "Delete", admin_client_path(client.id ), :method => :delete,
                                  :data => {:confirm => "Are you sure?"}, :class => "btn btn-warning" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="col-xs-12 no_padding_lr pagination"><%= paginate @clients %></div>
</div>
