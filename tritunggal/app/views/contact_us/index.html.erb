<div class="container">
  <%= render :partial => "shared/flash" %>
  <div class="col-xs-12 col-sm-6 contact-us">
    <%= form_for @contact, :url => contact_us_path do |f| %>
      <% if @contact.errors.any? %>
        <div class="error_explanation">
          <h2><%= pluralize(@contact.errors.count, "error") %> prevented this record from being saved:</h2>
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-xs-12 col-sm-6 form-group">
        <%= f.label :name, "Name *" %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
      <div class="col-xs-12 col-sm-6 form-group">
        <%= f.label :email, "Email *" %>
        <%= f.email_field :email, :class => "form-control" %>
      </div>
      <div class="col-xs-12 col-sm-6 form-group">
        <%= f.label :phone, "Phone Number" %>
        <%= f.email_field :email, :class => "form-control" %>
      </div>
      <div class="col-xs-12 col-sm-6 form-group">
        <%= f.label :company_name, "Company Name" %>
        <%= f.email_field :email, :class => "form-control" %>
      </div>
      <div class="col-xs-12 form-group">
        <%= f.label :subject, "Subject *" %>
        <%= f.text_field :subject, :class => "form-control" %>
      </div>
      <div class="col-xs-12 form-group">
        <%= f.label :content, "Message *" %>
        <%= f.text_area :content, :class => "form-control", :rows => 10 %>
      </div>
      <div class="col-xs-12 form-group">
        <%= recaptcha_tags %>
      </div>
      <div class="col-xs-12 form-group">
        <%= f.submit "Send Message", :class => "btn btn-info", :style=>"background-color:#51bf9f" %>
      </div>
      <div class="col-xs-12 form-group m-t-30">
        <b>* Marked fields are mandatory</b>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 no-padding-lr">
    <div class="col-xs-12 location">
      <h3>The <b>Office</b></h3>
      <span class="col-xs-12 address">
        <i class="fa fa-map-marker col-xs-3 col-sm-2 no-padding-lr" aria-hidden="true"></i>
        <div class="col-xs-9 col-sm-9 no-padding-lr">
          <b>Address:</b> Tamblong No 2, Bandung, Jawa Barat, Indonesia
        </div>
      </span>
      <span class="col-xs-12 phone">
        <i class="fa fa-phone col-xs-3 col-sm-2 no-padding-lr" aria-hidden="true"></i>
        <div class="col-xs-10 col-sm-9 info"><b>Phone:</b> (022) 421-8800</div>
      </span>
      <span class="col-xs-12 fax">
        <i class="fa fa-fax col-xs-3 col-sm-2 no-padding-lr" aria-hidden="true"></i>
        <div class="col-xs-10 col-sm-9 info"><b>Fax:</b> (022) 420-8001</div>
      </span>
      <span class="col-xs-12 email">
        <i class="fa fa-envelope col-xs-3 col-sm-2 no-padding-lr" aria-hidden="true"></i>
        <div class="col-xs-10 col-sm-9 info"><b>Email:</b> info@tritunggalswarna.co.id</div>
      </span>
    </div>
    <div class="col-xs-12 office-time">
      <h3><b>Business</b> Hours</h3>
      <span class="col-xs-12">
        <i class="fa fa-clock-o" aria-hidden="true"></i>
        Monday - Friday 8am to 5pm
      </span>
    </div>
  </div>
</div>
