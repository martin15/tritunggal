<div class="page-header">
  <div class="container">
    <div class="col-xs-12 col-sm-4 name no-padding-lr">Certificates</div>
    <div class="col-xs-12 col-sm-8 breadcrumb">
      <ol class="breadcrumb">
        <li><%= link_to "Home", root_path %></li>
        <li class="active">Certificates</li>
      </ol>
    </div>
  </div>
</div>

<div class="container">
  <%= render :partial => "shared/flash" %>
  <div class="col-xs-12 no-padding-lr certificate-umum">
    <h3>Umum</h3>
    <% @certificate_umum.each do |umum| %>
        <%= link_to raw("
          <div class='col-xs-6 col-md-4 col-lg-3 no-padding-lr certificate'>
            <div class='certificate-image'>
              #{image_tag umum.image.url(:medium), :class => "img-responsive"}
            </div>
            <div class='certificate-name'>
              #{umum.name.titleize}
            </div>
          </div>
        "), umum.file.url, :target => "_blank" %>
    <% end %>
  </div>
  <div class="col-xs-12 no-padding-lr certificate-teknik">
    <h3>Teknik</h3>
    <% @certificate_teknik.each do |teknik| %>
        <%= link_to raw("
          <div class='col-xs-6 col-md-4 col-lg-3 no-padding-lr certificate'>
            <div class='certificate-image'>
              #{image_tag teknik.image.url(:medium), :class => "img-responsive"}
            </div>
            <div class='certificate-name'>
              #{teknik.name.titleize}
            </div>
          </div>
        "), teknik.file.url, :target => "_blank" %>
    <% end %>
  </div>
</div>
