                <% end %>
              <% end %>
            </ul>
          </li>
          <li class="nav-item"><%= link_to "Certificates", certificates_path %></li>
          <li class="nav-item"><%= link_to "About Us", about_us_path %></li>
          <li class="nav-item"><%= link_to "Contact Us", contact_us_path %></li>
